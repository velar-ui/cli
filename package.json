{
  "name": "Velar",
  "version": "0.1.0",
  "description": "CLI to add composable UI components to Laravel projects",
  "keywords": [
    "laravel",
    "cli",
    "ui",
    "blade",
    "tailwind",
    "alpine"
  ],
  "type": "module",
  "bin": {
    "velar": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsc --watch & pnpm copy-themes:watch",
    "build": "tsc && pnpm copy-themes",
    "copy-themes": "cp -r src/registry/themes dist/registry/",
    "copy-themes:watch": "while true; do pnpm copy-themes; sleep 2; done",
    "lint": "eslint .",
    "prepublishOnly": "pnpm run build",
    "format": "prettier --write .",
    "check:ci": "pnpm run lint && pnpm run typecheck",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "prompts": "^2.4.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^25.0.9",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
